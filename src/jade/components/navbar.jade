- var a = [{href:"index.html",title:"главная"},{href:"about.html",title:"о компании"},{href:"index.html",title:"оборудование"},{href:"index.html",title:"ингридиенты"},{href:"#services",title:"услуги"},{	href:"index.html",title:"блог"},{href:"index.html",title:"контакты"}];

header.header
	img(src="assets/images/header__slogan.png").header__slogan
	.wrapper.row
		a(href="index.html").header__logo
			img(src="assets/images/header__logo.png")
		nav
			ul.header__navigation#nav
				each el, i in a
					li.header__navigation--element
						a(href="#{el.href}") #{el.title}
				
			include header__navigation--icon_menu
		.header__language_picker
			span language:
				select
					each element, i in ["RU","ENG"]
						option(value="#{element}") #{element}

